
<h1>Instruments</h1>

<div id="instruments">
<table id="instruments_index_table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name (ja)</th>
      <th>Name (en)</th>
      <th>Weight</th>
      <th title="Note in this DB">Note</th>
      <% if can? :update, Instrument %>
        <th colspan="3"></th>
      <% else %>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @instruments.each do |instrument| %>
      <tr>
        <td><%= instrument.id %></td>
        <% btr = instrument.best_translations %>
        <% %w(ja en).each do |lc| %> <%# no "fr" so far %>
        <td><%= %w(title alt_title).map{|i| tra=btr[lc]; s=(tra && h(tra.send(i))); s.blank? ? '&mdash;' : s}.join(' | ').html_safe %></td>
        <% end %>

        <td><%= instrument.weight %></td>
        <td><%= h(instrument.note) %></td>

        <td><%= link_to "Show", instrument %></td>
        <% if can? :update, instrument  %>
          <td><%= link_to 'Edit', edit_instrument_path(instrument) %></td>
        <% end %>
        <% if can? :destroy, instrument %>
          <td><%= link_to 'Destroy', instrument, method: :delete, data: { confirm: t('are_you_sure') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<% if can? :create, Instrument %>
  <%= button_to 'New Instrument', new_instrument_path, method: :get %>
<% end %>

