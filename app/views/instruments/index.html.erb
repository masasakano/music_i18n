
<h1>Instruments</h1>

<div id="instruments">
<table id="instruments_index_table">
  <thead>
    <tr>
      <th>ID</th>
       <%= render "layouts/title_alt_ja_en_table", model: nil, langcodes: %w(ja en) %>  <%# class="title_alt_ja" etc %>
      <th>Weight</th>
      <th title="Note in this DB">Note</th>
      <% if can? :update, Instrument %>
        <th colspan="3"></th>
      <% else %>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @instruments.each do |model| %>
      <tr>
        <td><%= model.id %></td>
       <%= render "layouts/title_alt_ja_en_table", model: model, langcodes: %w(ja en) %>  <%# class="title_alt_ja" etc %>

        <td><%= model.weight %></td>
        <td><%= auto_link50(h(model.note)) %></td>

        <td><%= link_to "Show", model %></td>
        <% if can? :update, model  %>
          <td><%= link_to 'Edit', edit_instrument_path(model) %></td>
        <% end %>
        <% if can? :destroy, model %>
          <td><%= link_to 'Destroy', model, method: :delete, data: { confirm: t('are_you_sure') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<% if can? :create, Instrument %>
  <%= button_to 'New Instrument', new_instrument_path, method: :get %>
<% end %>

