
<h1>EngagePlayHows</h1>

<div id="engage_play_hows">
<table id="engage_play_hows_index_table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name (ja)</th>
      <th>Name (en)</th>
      <th>Weight</th>
      <th title="Note in this DB">Note</th>
      <% if can? :update, EngagePlayHow %>
        <th colspan="3"></th>
      <% else %>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @engage_play_hows.each do |engage_play_how| %>
      <tr>
        <td><%= engage_play_how.id %></td>
        <% btr = engage_play_how.best_translations %>
        <% %w(ja en).each do |lc| %> <%# no "fr" so far %>
        <td><%= %w(title alt_title).map{|i| tra=btr[lc]; s=(tra && h(tra.send(i))); s.blank? ? '&mdash;' : s}.join(' | ').html_safe %></td>
        <% end %>

        <td><%= engage_play_how.weight %></td>
        <td><%= h(engage_play_how.note) %></td>

        <td><%= link_to "Show", engage_play_how %></td>
        <% if can? :update, engage_play_how  %>
          <td><%= link_to 'Edit', edit_engage_play_how_path(engage_play_how) %></td>
        <% end %>
        <% if can? :destroy, engage_play_how %>
          <td><%= link_to 'Destroy', engage_play_how, method: :delete, data: { confirm: t('are_you_sure') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<% if can? :create, EngagePlayHow %>
  <%= button_to 'New EngagePlayHow', new_engage_play_how_path, method: :get %>
<% end %>

