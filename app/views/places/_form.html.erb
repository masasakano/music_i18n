<hr>
<% end %>

<%= form_with(model: place, local: true) do |form| %>

  <% if place.new_record? %>
    <%= render partial: 'layouts/partial_new_translations', locals: {form: form, model: place, trans: Translation.new, disable_is_orig: true} %>
  <% end %>

  <div class="field" id="div_select_country">
    <%= form.label 'prefecture.country_id', t('Country')%>
    <% country_id = (@country ? @country.id : (place.country ? place.country.id : Country.unknown.id) ) %>
    <%= form.collection_select 'prefecture.country_id', @countries, :id, Proc.new{|i| i.title_or_alt(langcode: I18n.locale, prefer_alt: true)}, {include_blank: false,  selected: country_id } %>
  </div>

  <div class="field" id="div_select_prefecture">
    <%= form.label :prefecture_id, t('Prefecture') %>
    <%= form.grouped_collection_select 'prefecture', @countries, :prefectures, Proc.new{|i| i.title_or_alt(langcode: I18n.locale, prefer_alt: true)}, :id, Proc.new{|i| i.title_or_alt(langcode: I18n.locale, prefer_alt: true)}, {include_blank: true, selected: (place.prefecture ? place.prefecture_id : false)} %>
  </div>
  
  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note %>
  </div>

  <% %i(prev_model_name prev_model_id).each do |metho| %>
    <% if place.send(metho) %>
      <%= hidden_field(:place, metho) %>
    <% end %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
  <div class="actions">
  <%= submit_tag("Reset (Start Over)", { :name => 'reset', :id => 'reset_button', :type => "reset" }) %>
  </div>
