<%= simple_form_for(@play_role) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :mname %>
    <%= f.input :weight %>
<table id="play_roles_index_weight_table">
  <thead>
    <tr>
      <th>ID</th>
      <th>mname</th>
      <th>Weight</th>
      <th title="Note in this table">Note</th>
    </tr>
  </thead>

    <% PlayRole.order(:weight).each do |ea_mdl| %>
      <tr>
        <td><%= ea_mdl.id %></td>
        <td><%= ea_mdl.mname %></td>
        <td><%= ea_mdl.weight %></td>
        <td><%= ea_mdl.note %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    
    <%= f.input :note %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
