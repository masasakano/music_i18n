<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<table>
  <thead>
    <tr>
      <th>Name<br> (unique within RoleCategory)</th>
      <th>uname<br> (unique in all Roles)</th>
      <th>Role category</th>
      <th>Weight</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= role.uname || '&mdash;'.html_safe() %></td>
        <td><%= sprintf '%d (%s)', role.role_category_id, role.role_category.mname %></td>
        <td><%= role.weight %></td>
        <td><%= role.note %></td>
        <td><%= link_to 'Show', role %></td>
        <td><%= link_to 'Edit', edit_role_path(role) %></td>
        <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

