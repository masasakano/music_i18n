<div id="<%= dom_id channel_platform %>">
<dl>
  <% if can? :update, channel_platform %>
    <dt>ID (ChannelPlatform)</dt>
    <dd> <%= @channel_platform.id %></dd>
  <% end %>
  <dt><strong>mname:</strong></dt>
    <dd><%= channel_platform.mname %></dd>
  <dt>Note:</dt>
    <dd><%= channel_platform.note %></dd>
 <% if can? :update, Users::EditRolesController %>
   <% %w(create_user update_user).each do |metho| %>
  <dt><%= metho %>:</dt>
    <dd><%= ur = channel_platform.send(metho); link_to(ur.display_name, ur) if ur %></dd>
   <% end %>
 <% end %>
  <% if can? :update, channel_platform %>
  <dt>updated_at:</dt>
    <dd><%= channel_platform.updated_at %></dd>
  <% end %>
</dl>
</div>
