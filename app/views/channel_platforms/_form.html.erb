
<%= render partial: 'layouts/form_print_errors', locals: {model: channel_platform} %>

<% if ! channel_platform.new_record? %>
<hr>
<%= render partial: 'layouts/all_registered_translations', locals: {model: channel_platform, add_buttons: true} %>
<hr>

<h2>Unique parameters</h2>
<% end %>

<%= form_with(model: channel_platform, local: true) do |form| %>

  <% if channel_platform.new_record? %>
    <%= render partial: 'layouts/partial_new_translations', locals: {form: form, model: channel_platform, trans: Translation.new, disable_is_orig: true} %>
  <% end %>

  <div class="field">
    <%= form.label :mname, "mname" %>
    <%= form.text_field :mname, value: channel_platform.mname, placeholder: "Unique name (内部使用用途の空白を含まない短い名前)" %>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note %>
  </div>

  <div class="actions">
    <%= form.submit(channel_platform.new_record? ? "Create ChannelPlatform" :  "Update ChannelPlatform")%>
  </div>
  <div class="actions">
  <%= submit_tag("Reset (Start Over)", { :name => 'reset', :id => 'reset_button', :type => "reset" }) %>
  </div>
<% end %>


