<p id="notice"><%= notice %></p>

<h1>Sexes</h1>

<table>
  <thead>
    <tr>
      <th>Iso5218</th>
       <%= render "layouts/title_alt_ja_en_table", model: nil, langcodes: %w(ja en fr) %>  <%# class="title_alt_ja" etc %>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sexes.each do |sex| %>
      <tr>
        <td><%= sex.iso5218 %></td>
       <%= render "layouts/title_alt_ja_en_table", model: sex, langcodes: %w(ja en fr) %>  <%# class="title_alt_ja" etc %>
        <td><%= auto_link50(sex.note) %></td>
        <td><%= link_to 'Show', sex %></td>
        <td><%= link_to('Edit', edit_sex_path(sex)) if can?(:update, sex) %></td>
        <td><%= link_to( 'Destroy', sex, method: :delete, data: { confirm: t('are_you_sure') }) if can?(:destroy, sex) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Sex %>
  <%= button_to 'Create New Sex', new_sex_path, method: :get %>
  <%# link_to 'New Sex', new_sex_path %>
<% end %>

