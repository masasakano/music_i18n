
<%# Assumed instance variables: @hvma %>

<% note = @hvma.note %>

<%= turbo_frame_tag "note_"+dom_id(@hvma) do %>
  <span class="note text-start">
    <% title_txt = "Note for this association" %>
    <% title_txt << "; HaramiVidMusicAssc(ID=#{@hvma.id})" if can?(:edit, HaramiVid) %>
    <span title="<%= title_txt %>"><%= @hvma.note %>
  </span>
  <% if can? :edit, @hvma.harami_vid %>
    <%= button_to "Edit", edit_harami_vid_music_assocs_note_path(@hvma), method: :get, form_class: "inline_form", class: "text-end", style: "display: inline-block; margin-top: -1em; padding-top: 0em; padding-bottom: 0em; margin-bottom: -1em;" %>
  <% end %>

  <%= render partial: "/layouts/flash_display" %>
<% end %>

