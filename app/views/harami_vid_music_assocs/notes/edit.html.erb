<%= turbo_frame_tag "note_"+dom_id(@hvma) do %>
  <%= form_tag(harami_vid_music_assocs_note_path(@hvma), method: "patch", class: "inline_form_tight") do %>
    <%# label_tag(label_txt, "Note:") %>
    <%= text_area_tag(HaramiVidMusicAssoc::FORM_NOTE, @hvma.form_note, style: "max-width: 10em; display: inline-block;") %>
      <%# NOTE: If a negative value is given, like "-6", "59:54" is then displayed. %>
    <%= submit_tag "Submit", style: "display: inline-block" %>
    <%= link_to "Cancel", harami_vid_music_assocs_note_path(@hvma), class: "btn btn--light button_like" %>
  <% end %>

  <%= render partial: 'layouts/form_print_errors', locals: {model: @hvma, error_explanation_for_class: true} %>
  <%# render partial: "/layouts/flash_display" %>
<% end %>

